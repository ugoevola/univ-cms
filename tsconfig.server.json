{
  "extends": "./tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/server/app/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/server/**/*.spec.ts",
    "src/server/test/**/*",
  ]
}
